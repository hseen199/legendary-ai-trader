# ============================================
# منصة التداول الذكي الخارقة - متغيرات البيئة
# Legendary AI Platform - Environment Variables
# ============================================

# ===== قاعدة البيانات (Database) =====
DATABASE_URL=postgresql+asyncpg://legendary_user:legendary_password@localhost:5432/legendary_ai_platform
DATABASE_ECHO=false

# ===== الأمان (Security) =====
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===== Binance API =====
BINANCE_API_KEY=your-binance-api-key-here
BINANCE_API_SECRET=your-binance-api-secret-here
BINANCE_MASTER_ACCOUNT=your-master-account-email@example.com
BINANCE_TESTNET=false

# ===== البريد الإلكتروني (Email) =====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@legendaryai.com
SMTP_FROM_NAME=Legendary AI Platform

# ===== البوت (Trading Bot) =====
BOT_ENABLED=true
BOT_TRADING_SYMBOL=USDCUSDT
BOT_INITIAL_CAPITAL=1000
BOT_MAX_DAILY_LOSS_PERCENT=5
BOT_MAX_DRAWDOWN_PERCENT=10
BOT_MAX_POSITION_SIZE_PERCENT=25
BOT_LOG_LEVEL=INFO

# ===== التداول (Trading) =====
TRADING_SYMBOLS=BTCUSDC,ETHUSDC,BNBUSDC,ADAUSDC,SOLUSDC
TRADING_TIMEFRAMES=1m,5m,15m,1h,4h,1d
TRADING_SLIPPAGE_TOLERANCE=0.001
TRADING_MIN_ORDER_SIZE=10

# ===== التدريب (Training) =====
TRAINING_MODEL_TYPE=DQN
TRAINING_MAX_EPISODES=1000
TRAINING_OPTIMIZE_HYPERPARAMS=true
TRAINING_LOOKBACK_DAYS=365

# ===== LLM (Language Model) =====
LLM_MODEL=gpt-4.1-mini
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
OPENAI_API_KEY=your-openai-api-key

# ===== الذاكرة (Memory) =====
MEMORY_EPISODIC_CAPACITY=10000
MEMORY_SEMANTIC_CAPACITY=5000
MEMORY_SEMANTIC_DB_PATH=./data/semantic_memory.db

# ===== الإشعارات (Notifications) =====
NOTIFICATIONS_ENABLED=true
NOTIFICATIONS_WEBHOOK_URL=https://your-webhook-url.com
NOTIFICATIONS_TELEGRAM_BOT_TOKEN=your-telegram-bot-token
NOTIFICATIONS_TELEGRAM_CHAT_ID=your-telegram-chat-id

# ===== التطوير (Development) =====
DEBUG=false
ENVIRONMENT=production
LOG_LEVEL=INFO
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true

# ===== Redis (للـ Caching) =====
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# ===== المراقبة (Monitoring) =====
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
MONITORING_ENABLED=true

# ===== الرسوم (Fees) =====
PERFORMANCE_FEE_PERCENT=20
MANAGEMENT_FEE_PERCENT=0
WITHDRAWAL_FEE_PERCENT=0

# ===== الحدود (Limits) =====
MAX_USERS=10000
MAX_CONCURRENT_TRADES=100
MAX_DEPOSIT_AMOUNT=1000000
MIN_DEPOSIT_AMOUNT=10
MAX_WITHDRAWAL_AMOUNT=1000000
MIN_WITHDRAWAL_AMOUNT=10

# ===== الإدارة (Admin) =====
ADMIN_EMAIL=admin@legendaryai.com
ADMIN_PASSWORD=change-this-password
ADMIN_TELEGRAM_CHAT_ID=your-admin-telegram-chat-id

# ===== الأرشفة (Archiving) =====
DATA_RETENTION_DAYS=365
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily

# ===== URLs =====
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:8000
API_V1_PREFIX=/api/v1

# ===== NOWPayments (بوابة الدفع) =====
NOWPAYMENTS_API_KEY=your-nowpayments-api-key
NOWPAYMENTS_PUBLIC_KEY=your-nowpayments-public-key
NOWPAYMENTS_IPN_SECRET=your-nowpayments-ipn-secret
NOWPAYMENTS_API_URL=https://api.nowpayments.io/v1

# ===== الخدمات الخارجية (External Services) =====
COINGECKO_API_URL=https://api.coingecko.com/api/v3
COINMARKETCAP_API_KEY=your-coinmarketcap-api-key
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key
